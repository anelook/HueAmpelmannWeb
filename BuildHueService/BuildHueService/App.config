<?xml version="1.0" encoding="utf-8" ?>
<configuration>
   <system.serviceModel>
     <services>

        <service name="BuildHueService.StateNotify" behaviorConfiguration="mex">
            <endpoint binding="webHttpBinding" contract="BuildHueService.IStateNotify"
                      behaviorConfiguration="webHttp" address="stateNotify" />
          <host>
            <baseAddresses>
              <add baseAddress="http://0.0.0.0:8081/"/>
            </baseAddresses>
          </host>
        </service>
     </services>
     <behaviors>
        <endpointBehaviors>
            <behavior name="webHttp">
                <webHttp/>
            </behavior>
        </endpointBehaviors>
        <serviceBehaviors>
           <behavior name="mex">
              <serviceMetadata httpGetEnabled="true" />
            </behavior>

        </serviceBehaviors>
   </behaviors>
  </system.serviceModel>
</configuration>